{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": ["es2016", "es2017", "esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["dist", ".cache", "node_modules"]
}
